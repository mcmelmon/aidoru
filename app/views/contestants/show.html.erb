<div class='container'>
    <div class='contestant'>
        <div class='row'>
            <div class='col' style='max-width:175px'>
                <div class='mb-4'><%= render partial: 'contestant_nameplate_full', locals: {contestant: @contestant} %></div>
                <h4><%= link_to 'Profile', @contestant.profile_url, target: '_blank'%></h4>
            </div>
            <div class='col'>
                <% @contestant.performances.each do |performance| %>
                    <div class='performance mb-4'>
                        <h3 class='mb-1'><%= performance.name_native %></h2>
                        <h3 class='mb-1'><%= performance.name_english %></h2>
                        <div class='video'><%= youtube_video performance.youtube_video_id %></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>