<%= content_for(:title) { "#{@contestant.name_native} (#{@contestant.name_english})" } %>
<%= content_for(:page_description) { "#{@contestant.contest.name_native}'s #{@contestant.name_native} (#{@contestant.name_english})} 予想にいいねしてください！" } %>

<div class='container'>
    <div class='contestant'>
        <div class='row'>
            <div class='col-sm-3'>
                <div class='call-to-vote text-center mb-3 mt-3'>あなたの推しMENに投票してください!</div>
                <div class='mb-4'><%= render partial: 'nameplate_full', locals: {contestant: @contestant, period: Contest.first.current_period} %></div>
                <h4><%= link_to 'プロフィール', @contestant.profile_url, target: '_blank'%></h4>
            </div>
            <div class='col'>
                <% @contestant.performances.order('created_at DESC').each do |performance| %>
                    <div class='performance mb-4'>
                        <h3 class='mb-1'><%= performance.name_native %></h2>
                        <h3 class='mb-1'><%= performance.name_english %></h2>
                        <div class='video'><%= youtube_video performance.youtube_video_id %></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>