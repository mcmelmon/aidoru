<div class='container'>
    <div class='actions mb-4 mt-4'>
        <%= link_to 'だれがアイドルになるか当ててみてください！', new_group_path, class: 'btn btn-primary', style: 'width:250px' %>
        <hr>
    </div>
    <% @groups.each do |group| %>
        <%= render partial: 'groups/group_summary', locals: { group: group } %>
        <hr>
    <% end %>
    <div class='apple_pagination mb-4 mt-4'><%= will_paginate @groups %></div>
</div>