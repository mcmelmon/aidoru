<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label 'メールアドレス (email)' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb-4">
    <%= f.label 'パスワード (password)' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字数制限 characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mb-4">
    <%= f.label 'パスワード 確認用 (confirm password)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mb-4 mt-4">
    <%= f.submit "サインアップ (Sign Up)", class: 'btn btn-primary btn-lg mb-4', style: 'width: 250px' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
