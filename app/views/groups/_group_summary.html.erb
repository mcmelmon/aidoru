<div class='summary mb-4'>
    <h4 class='mb-1'>
        <%= link_to group.name, group_path(group) %>
        <%= ' (active group)' if group.is_active_for(current_user) %>
    </h4>
    <p><%= group.description %></p>
    <% if group.center.present? %>
        <p>Center: <%= link_to "#{group.center.name_native} (#{group.center.name_english})", contestant_path(group.center) %><p>
    <% end %>
    <p><%= "Members: #{group.contestants.count}" %></p>
    <p class='mt-2'>
        <% unless group.is_active_for(current_user) %>
            <span><%= link_to('make active group', make_current_group_path(group)) %></span> | 
        <% end %>
        <span>
            <%= link_to edit_group_path(group) do %>
                edit <i class='fas fa-edit'></i>
            <% end %>
        </span> |
        <span>
            <%= link_to group, method: :delete, data: { confirm: 'Are you sure you want to disband this group?' } do %>
                disband <i class='fas fa-trash-alt'></i>
            <% end %>
        </span>
    </p>
</div>