<%= form_for(@group || Group.new) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field mt-4">
      <%= f.label 'Describe your reasons for choosing the group members' %><br />
      <%= f.text_area :description, rows: '11' %>
    </div>
  
    <%= hidden_field_tag(:user_id, @group.user_id) %>
    <%= hidden_field_tag(:contest_id, @group.contest_id) %>
  
    <div class="actions">
      <%= f.submit (@group.persisted? ? 'Update' : 'Create'), class: 'btn btn-primary btn-lg' %>
    </div>
<% end %>