<div class='container'>
    <% @groups.each do |group| %>
        <% if group.contestants.present? %>
            <h2><%= link_to group.name, group_path(group) %></h2>
            <%= render partial: 'groups/group', locals: { group: group } %>
            <p><%= truncate(group.description, length: 140) %></p>
            <hr>
        <% end %>
    <% end %>
</div>