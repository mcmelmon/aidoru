<nav class='navbar navbar-light bg-light navbar-expand-md fixed-top'>
  <%= link_to 'Oijofie', root_path, class: 'navbar-brand' %>
  <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarsRinchan' aria-controls='navbarsRinchan' aria-expanded='false' aria-label='Toggle navigation'>
    <span class='navbar-toggler-icon'></span>
  </button>

  <div class='collapse navbar-collapse' id='navbarsRinchan'>
    <ul class='navbar-nav mr-auto'>
      <li class='nav-item'><%= link_to 'About', '#', class: 'nav-link' %></li>
      <li class='nav-item dropdown'>
        <%= link_to 'Groups', '#', class: 'nav-link dropdown-toggle', id: 'dropdown01', 'data-toggle': 'dropdown' %>
        <div class='dropdown-menu' aria-labelledby='dropdown01'>
          <% if user_signed_in? %>
            <%= link_to 'My Groups', user_groups_path(current_user), class: 'dropdown-item' %>
          <% end %>
          <%= link_to 'All Groups', groups_path, class: 'dropdown-item' %>
        </div>
      </li>
      <% if user_signed_in? %>
        <li class='nav-item dropdown'>
          <%= link_to current_user.email&.truncate(14), '#', class: 'nav-link dropdown-toggle', id: 'dropdown01', 'data-toggle': 'dropdown' %>
          <div class='dropdown-menu' aria-labelledby='dropdown01'>
            <%= link_to 'Account', edit_user_registration_path, class: 'dropdown-item' %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
          </div>
        </li>
      <% else %>
        <li class='nav-item'><%= link_to 'Sign In', user_session_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </div>
</nav>

<% flash.each do |key, message| %>
  <p role='alert' class='<%= key == 'notice' ? 'alert alert-success' : 'alert alert-warning' %>'><%= message %></p>
<% end %>
